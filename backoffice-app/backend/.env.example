BACKOFFICE_ADDR=":8080" # Alamat bind server HTTP backend
FRONTEND_ORIGIN=http://localhost:5210 # Origin CORS untuk frontend backoffice (SSR dev/prod)
BACKOFFICE_JWT_SECRET=__CHANGE_ME__ # Secret JWT untuk autentikasi admin (gunakan nilai kuat di production)
PAYMENT_WEBHOOK_SECRET=__WEBHOOK_SECRET__ # Secret verifikasi signature webhook pembayaran
BACKOFFICE_TLS_CERT= # (opsional) path file sertifikat TLS jika menggunakan HTTPS langsung
BACKOFFICE_TLS_KEY= # (opsional) path file private key TLS

DATABASE_URL=postgresql://__USER__:__PASSWORD__@__HOST__:6543/__DB__ # URL Postgres (disarankan: Supabase pooler port 6543)
REDIS_URL=redis://__USER__:__PASSWORD__@__HOST__:6379 # URL Redis untuk cache/queue (opsional)

# Timeout opsional (format Go duration, contoh: 10s, 5s)
BACKOFFICE_SHUTDOWN_TIMEOUT=10s # Timeout graceful shutdown server
BACKOFFICE_READ_TIMEOUT=5s # Timeout baca request
BACKOFFICE_WRITE_TIMEOUT=10s # Timeout tulis response
BACKOFFICE_IDLE_TIMEOUT=60s # Timeout idle koneksi